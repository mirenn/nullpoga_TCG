{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "outputs": ["dist/**"],
        "dependsOn": ["^build"]
      },
      "test": {
        "outputs": [],
        "dependsOn": ["build"]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false,
        "persistent": true
      }
    }
  }